{
  "name": "tx-reflector",
  "version": "0.3.1",
  "description": "TypeScript transformer for code generation.",
  "keywords": [
    "typescript",
    "reflect",
    "transformer",
    "react",
    "interface"
  ],
  "main": "index.js",
  "repository": "git@github.com:artifact-project/tx-reflector.git",
  "scripts": {
    "test": "jest --coverage",
    "ts-build": "tsc",
    "ts-clean": "git clean -f",
    "prepublish-only": "npm run test && npm run ts-build",
    "prepublish": "[ -f index.js ] || npm run prepublish-only",
    "postpublish": "npm run ts-clean"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "src/*/*.js",
    "src/*/*.d.ts"
  ],
  "author": "RubaXa <ibnRubaXa@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^8.0.1",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "typescript": "^2.4.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.tsx?$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
